<?xml version="1.0" encoding="UTF-8"?>

<Module>
	<ModulePrefs title="__MSG_title__">
		<Require feature="dynamic-height"/>
		<Locale messages="ALL_ALL.xml" />
		<Locale lang="ja" messages="ja_ALL.xml"/>
		<Locale lang="zh" messages="zh_ALL.xml"/>
		<Icon>__IS_GADGET_BASE_URL__/clock-globe.gif</Icon>
	</ModulePrefs>
	<WidgetPref datatype="string" display_name="__MSG_lb_contentLink__" name="contentLink" value=""/>

	<Header maximize="off" refresh="off"/>

	<Content type="html" view="home"><![CDATA[
<style type="text/css"><!--
body{
	margin:0;
}
#worldclock{
	border:1px #eef;
	padding:5px;
	font-family:arial;
	font-size:10pt;
	font-weight:bold;
	text-align:center;
}
.country{
	font-family:san-serif;
	font-size:8pt;
	color:gray;
}
.date{
	font-family:san-serif;
	font-size:8pt;
	color:gray;
}
.hide{
	display:none;
}
.show{
	display:inline;
}
-->

@media only screen and 
(min-device-width : 768px) and 
(max-device-width : 1024px) {
	body {
		color: #34495E;
	}
	
	#main {
		position:fixed;
		top:0px;
		left:0px;
		bottom:0px;
		right:0px;
		margin:0px;
	}

	#content {
		display : table;
		width : 100%;
		height : 100%;
	}
	
	#worldclock {
		display : table-cell;
		vertical-align: middle;
		font-size: 13pt;
		font-weight: normal;
	}
	
	.country,
	.date {
		color: #7F8C8D;
		font-size: 12px;
		font-family:arial;
	}
	
	hr {
		border: 0;
		border: 0;
		border-bottom: 1px solid rgba(127, 140, 141,0.15);
		margin-top: 6px;
		margin-bottom: 12px;
	}
}
</style>
<div id="main">
	<div id="content">
		<div id="worldclock">
		</div>
	</div>
</div>

<script type="text/javascript">
	var is_loadScript = function( src ) {
		var head = document.getElementsByTagName("head")[0];
		var script = document.createElement("script");
		script.type = "text/javascript";
		script.src = src;
		
		head.appendChild( script );
	}
	
	var baseURL = "__IS_GADGET_BASE_URL__";
	is_loadScript("__IS_GADGET_BASE_URL__/worldclock.js");
</script>
	]]></Content>
</Module>